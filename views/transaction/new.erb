<form class="details-form" action="/trip/<%= @trip.id() %>/create" method="post">

  <div class="details-form-row">
    <label for="date" class="details-form-cell">Date of the transaction:</label>
    <input type="date" name="timelog" id="date" class="details-form-cell" value=<%= Time.now %>>
  </div>

  <div class="details-form-row">
    <label for="name" class="details-form-cell">How to identify the transaction?</label>
    <input type="text" name="name" placeholder="optional" class="details-form-cell">
  </div>

  <div class="details-form-row">
    <label for="amount" class="details-form-cell">How much did you spend?</label>
    <input type="number" name="amount" min="0" step="0.01" id="amount" placeholder="0.00" min="0.01" required class="details-form-cell">
  </div>

  <div class="details-form-row">
    <label for="bussines" class="details-form-checkbox">Bussiness expense?</label>
    <input type="checkbox" name="business" id="business" value="true" class="details-form-checkbox" <%= "checked" if @trip.business() %> >
  </div>

  <div class="details-form-row">
    <label for="company" class="details-form-cell">Where did you spend your money?</label>
    <input type="text" name="company" id="company" placeholder="Optional" class="details-form-cell">
  </div>


  <input type="submit" value="Make new transaction" class="details-form-submit-button">
</form>

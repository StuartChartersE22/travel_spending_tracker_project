<h1>Trips</h1>

<% if Trip.find_current() %>
<% current = Trip.find_current() %>
<ul class="trip-list" id="trip-list-current">
  <li>

    <table>
    <thead>
      <h3><%= current.name() %></h3>
    </thead>
    <tr>
    <% if current.budget() %>
      <th>Spending money left:</th>
      <td class="amount"><%= current.remaining_budget() %></td>
    <% else %>
      <th>Amount spent:</th>
      <td class="amount"><%= current.expenditure_total() %></td>
    <% end %>
    </tr>
    </table>

    <a href="/<%= current.id() %>/new">New transaction</a>
    <a href="/<%= current.id()%>">See transactions</a>
    <form class="delete" action="/<%= current.id() %>/delete" method="post">
        <input type="submit" value="Delete Trip" class="button">
    </form>

  </li>
</ul>
<% end %>


<ul class="trip-list">
  <% for trip in Trip.all_but_current() %>
  <li><table>
    <thead>
      <h3><%= trip.name() %></h3>
    </thead>
    <tr>
      <th>Amount spent:</th>
      <td class="amount"><%= trip.expenditure_total() %></td>
    </tr>
    </table>

    <a href="/<%= trip.id()%>">See transactions</a>
    <form class="delete" action="/<%= trip.id() %>/delete" method="post">
      <input type="submit" value="Delete Trip" class="button">
    </form>

   </li>
<% end %>
</ul>

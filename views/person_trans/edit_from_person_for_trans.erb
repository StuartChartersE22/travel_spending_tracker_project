<form class="details-form" action="/person_trans/<%= @person_trans.id() %>/<%= @person_trans.person_id() %>/update" method="post">

  <select class="details-form-name-input" name="transaction_id">
    <% for transaction in @transactions %>
      <option value="<%= transaction.id() %>" <%= "selected" if transaction.id() == @person_trans.transaction_id() %>>
        <p><%= transaction.name() %> on <%= transaction.find_trip().name() %> </p>
      </option>
    <% end %>
  </select>

  <div class="details-form-row">
    <label for="owe" class="details-form-cell">How much do they owe you?</label>
    <input type="number" name="owe" min="0" step="0.01" id="owe" placeholder="0.00" min="0.01" value="<%= Money.convert_to_decimal_string(@person_trans.owe().delete('Â£ ')) %>" class="details-form-cell" required>
  </div>

  <input type="submit" value="That's better!" class="details-form-submit-button">
  <a href="/person/<%= @person_trans.person_id() %>" class="details-form-submit-button">I liked the original</a>
</form>

<form class="create-owing" action="/person_trans/create/<%= @person.id() %>/person" method="post">
  <select class="owing-options" name="transaction_id">
    <% for transaction in @transactions %>
      <option value="<%= transaction.id() %>">
        <p><%= transaction.name() %> on <%= transaction.find_trip().name() %> </p>
      </option>
    <% end %>
  </select>

  <label for="owe">How much do they owe you?</label>
  <input type="number" name="owe" min="0" step="0.01" id="owe" placeholder="0.00" min="0.01" required>

  <input type="submit" value="Add owing">
</form>

<form class="details-form" action="/person_trans/create/<%= @person.id() %>/person" method="post">

  <select class="details-form-name-input" name="transaction_id">
    <% for transaction in @transactions %>
      <option value="<%= transaction.id() %>">
        <p><%= transaction.name() %> on <%= transaction.find_trip().name() %> </p>
      </option>
    <% end %>
  </select>

  <div class="details-form-row">
    <label for="owe" class="details-form-cell">How much do they owe you?</label>
    <input type="number" name="owe" min="0" step="0.01" id="owe" placeholder="0.00" min="0.01" class="details-form-cell" required>
  </div>

  <input type="submit" value="Add owing" class="details-form-submit-button">
  <a href="/person/<%= @person.id() %>" class="details-form-submit-button">Back</a>
</form>

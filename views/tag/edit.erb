<form class="details-form" action="/tag/<%= @tag.id() %>/update" method="post">

  <input type="text" name="name" placeholder="What would you like the tag to be instead?" value="<%= @tag.name() %>" class="details-form-name-input" required>

  <input type="submit" value="That's better!" class="details-form-submit-button">
  <a href="/tag/<%= @tag.id() %>" class="details-form-submit-button">I liked the original</a>
</form>

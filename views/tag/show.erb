<h2>Tag: <%= @tag.name() %></h2>
<a href="/tag/<%= @tag.id() %>/edit">Edit name</a>
<a href="/tags" class="button">To list of tags</a>
<form class="delete button" action="/tag/<%= @tag.id() %>/delete" method="post">
    <input type="submit" value="Delete Tag">
</form>

<h3>Used to tag:</h3>
<ul>
  <% for transaction in @tag.find_transactions() %>
    <li> <a href="/transaction/<%= transaction.id() %>">
      <h3><%= transaction.name() %></h3>
    </a> whilst on:
    <a href="/trip/<%= transaction.trip_id() %>">
      <%= transaction.find_trip().name() %>
    </a> </li>
  <% end %>
</ul>

<h2>People</h2>
<a href="/people/new" class="button">Make new person record</a>
<ul>
  <% for person in @people %>
    <li><a href="/person/<%= person.id() %>"><%= person.name() %></a>
      <a href="/person/<%= person.id() %>/edit">Edit</a>
      <a href="/person_trans/<%= person.id() %>/person">Add owing for a transaction</a>
      <a href="/person_trans/<%= person.id() %>/person/trip">Add owing for a trip</a>
      <form class="delete button" action="/person/<%= person.id() %>/delete" method="post">
          <input type="submit" value="Delete person record">
      </form>
    </li>
  <% end %>
</ul>

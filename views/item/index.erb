<h2>Items for <%= @transaction.name() %></h2>
<a href="/tags/new" class="button">Make new tag</a>
<ul class="list-displaying-relationships">
  <% for tag in @tags %>
  <div class="detail-entry">
    <li><a href="/tag/<%= tag.id() %>"><h4><%= tag.name() %></h4></a></li>
    <li class="detail-entry-information">
      <a href="/tag/<%= tag.id() %>/edit" class="detail-entry-button">Edit</a>
      <form action="/tag/<%= tag.id() %>/delete" method="post">
          <input type="submit" value="Delete Tag" class="detail-entry-button">
      </form>
    </li>
  </div>
  <% end %>
</ul>

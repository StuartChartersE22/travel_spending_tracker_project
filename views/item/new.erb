<form class="details-form" action="/item/<%= @transaction.id() %>/create" method="post">

  <input type="text" name="name" placeholder="What is the item?" required>

  <label for="amount">Price of item:</label>
  <input type="number" name="amount" min="0" step="0.01" id="amount" placeholder="0.00" min="0.01" required>

  <input type="submit" value="Add item">
  <a href="/transaction/<%= @transaction.id() %>">Back</a>
</form>

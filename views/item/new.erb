<form class="details-form" action="/item/<%= @transaction.id() %>/create" method="post">

  <input type="text" name="name" placeholder="What is the item?" required>

  <label for="amount">Price of item:</label>
  <input type="number" name="amount" min="0" step="0.01" id="amount" placeholder="<%= Money.convert_to_decimal_string(@max_amount) %> left to assign" min="0.01" max="<%= Money.convert_to_decimal_string(@max_amount) %>" required>

  <input type="submit" value="Add item">
  <a href="/transaction/<%= @transaction.id() %>">Back</a>
</form>
